                    {#<label for="password" class="">Password</label>#}
                    <input class="form-control" type="password" name="password" id="password" placeholder="Password">
                </div>
            </div>
            <div class="">
                <button class="btn btn-block btn-primary" type="submit">Register now !</button>
            </div>
        </form>
    </div>
{% endblock content %}