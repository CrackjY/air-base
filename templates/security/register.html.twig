{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="text-center mb-4">Register</h1>

    {% include 'security/message.html.twig' %}

    <div class="register">
        <form id="" method="POST" action="">
            <div class="form-row">
                <div class="col">
                    {#<label for="firstname" class="">Firstname</label>#}
                    <input class="form-control" type="text" name="firstname" id="firstname" placeholder="Firstname">
                </div>
                <div class="col">
                   {# <label for="lastname" class="">Lastname</label>#}
                    <input class="form-control" type="text" name="lastname" id="lastname" placeholder="Lastname">
                </div>
            </div>
            <div class="">
                <div class="">
                    {#<label for="adress" class="">Adress</label>#}
                    <input class="form-control" type="text" name="address" id="address" placeholder="Address">
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    {#<label for="zip-code" class="">Zip code</label>#}
                    <input class="form-control" type="text" name="zip_code" id="zip-code" placeholder="Zip code">
                </div>
                <div class="col">
                    {#<label for="city" class="">City</label>#}
                    <input class="form-control" type="text" name="city" id="city" placeholder="City">
                </div>
            </div>
            <div class="">
