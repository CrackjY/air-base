{% extends 'layout_back.html.twig' %}

{% block new %}
    <div class="register">
        <form id="" method="POST">

            <div class="checkbox-roles">
                {% for role in roles %}
                    <div>
                        <label for="roles" class="label-roles">{{ role.name }}</label>
                        <input
                            class="input-roles"
                            value="{{ role.id }}"
                            type="checkbox" name="role"
                            id="roles">
                    </div>
                    <hr>
                {% endfor %}
            </div>

            <div class="form-row">
                <div class="col">
                    {#<label for="firstname" class="">Firstname</label>#}
                    <input value="{{ user.firstname }}" class="form-control" type="text" name="firstname" id="firstname" placeholder="Firstname">
                </div>
                <div class="col">
                    {# <label for="lastname" class="">Lastname</label>#}
                    <input value="{{ user.lastname }}" class="form-control" type="text" name="lastname" id="lastname" placeholder="Lastname">
                </div>
            </div>
            <div class="">
                <div class="">
                    {#<label for="adress" class="">Adress</label>#}
                    <input value="{{ user.address }}" class="form-control" type="text" name="address" id="address" placeholder="Address">
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    {#<label for="zip-code" class="">Zip code</label>#}
                    <input value="{{ user.zip_code }}" class="form-control" type="text" name="zip_code" id="zip-code" placeholder="Zip code">
                </div>
                <div class="col">
                    {#<label for="city" class="">City</label>#}
                    <input value="{{ user.city }}" class="form-control" type="text" name="city" id="city" placeholder="City">
                </div>
            </div>
            <div class="">
                <div class="">
                    {#<label for="phone" class="">Phone number</label>#}
                    <input value="{{ user.phone_number }}" class="form-control" type="text" name="phone" id="phone" placeholder="Phone">
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    {#<label for="email" class="">E-mail</label>#}
                    <input value="{{ user.email }}" class="form-control" type="email" name="email" id="email" placeholder="Email">
                </div>
                <div class="col">
                    {#<label for="birth_date" class="">City</label>#}
                    <input value="{{ user.birth_date }}" class="form-control" type="text" name="birth_date" id="birth-date" placeholder="Birth date">
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    {#<label for="pseudo" class="">Pseudo</label>#}
                    <input value="{{ user.pseudo }}" class="form-control" type="text" name="pseudo" id="pseudo" placeholder="Pseudo">
                </div>
                <div class="col">
                    {#<label for="password" class="">Password</label>#}
                    <input value="{{ user.encrypt_password }}" class="form-control" type="password" name="password" id="password" placeholder="Password">
                </div>
            </div>
            <div class="">
                <button class="btn btn-block btn-warning text-white p-3" type="submit">Confirm</button>
            </div>
        </form>
    </div>

{% endblock new %}
