{% extends 'layout_back.html.twig' %}

{% block content %}
    <h2 class="mt-3 mb-3 text-center">Users</h2>
    <div class="block-star-spec">
        <div class="line-spec"></div>
        <i class="fa fa-bolt" aria-hidden="true"></i>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Role</th>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>
                        {% for userWithRole in usersWithRoles %}
                            {% if user.id == userWithRole.user_id_from_user_role %}
                                <span class="badge badge-info p-2">{{ userWithRole.role_name | hook }}</span>
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phone_number }}</td>
                    <td>{{ user.address }}</td>
                    <td>{{ user.city }}</td>
                    <td>
                        {% if user.enabled %}
                            enabled
                        {% else %}
                            disabled
                        {% endif %}
                    </td>
                    <td>
                        <a href="/air-base/?page=admin/users/edit&amp;id={{ user.id }}"><i class="fa fa-pencil fa-2x text-center" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a class="link-new-item mb-3" href="/air-base/?page=register"><strong class="btn-more">+</strong></a>

{% endblock content %}
