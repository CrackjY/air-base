{% extends 'layout_back.html.twig' %}

{% block content %}
    <h2 class="mb-3 text-center">New pilot</h2>

    <div class="add">
        <form class="form" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" id="name" name="name" placeholder="Pilot name">
                <input type="text" class="form-control" id="address" name="address" placeholder="Address">
                <input type="text" class="form-control" id="salary" name="salary" placeholder="Salary">
            </div>
            <button type="submit" class="btn-edit text-white confirm">Confirm</button>
        </form>
    </div>
{% endblock content %}