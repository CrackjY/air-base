{% extends 'layout_back.html.twig' %}

{% block content %}
    <h2 class="mt-3 mb-3 text-center">Airplanes</h2>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Capacity</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Enabled</th>
                </tr>
            </thead>
            <tbody>

            {% for airplane in airplanesWithType %}

                <tr>
                    <td>{{ airplane.id }}</td>
                    <td>{{ airplane.airplane_name }}</td>
                    <td>{{ airplane.capacity }}</td>
                    <td>{{ airplane.type_name }}</td>
                    <td>{{ airplane.date | date }}</td>
                    <td>{{ airplane.enabled }}</td>
                </tr>
            {% endfor %}
                <tr class="tr-action">
                </tr>
            </tbody>
        </table>
    </div>

    <div class="container-add"></div>

    <a class="link-new-item mb-3" href="/?page=admin/airplanes/new"><strong class="btn-more">+</strong></a>
    <a class="btn btn-danger text-white previous" href="/?page=admin/airplanes&&pagination=1">1</a>
    <a class="btn btn-danger text-white next" href="/?page=admin/airplanes&&pagination=2">2</a>
{% endblock content %}
